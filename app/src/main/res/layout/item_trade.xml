<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@android:color/white"
    android:layout_margin="10dp"
    android:elevation="2dp">

    <!-- 전체 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="0dp">

        <!-- 신청자 정보 -->
        <TextView
            android:id="@+id/applicant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청자: 홍길동"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="9dp" />

        <!-- 날짜와 총 근무 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/work_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날짜: 2024-11-22"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/total_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 근무 시간: 4시간"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 시작 시간과 종료 시간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간: 10:00"
                android:textSize="14sp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="급여"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 교환 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/exchange_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="근무 교환 수락"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/overflow_menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more_vert"
        android:contentDescription="더보기 메뉴"
        android:layout_gravity="end|top"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="4dp" />
</FrameLayout>
