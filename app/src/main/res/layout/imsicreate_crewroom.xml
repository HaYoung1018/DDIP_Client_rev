<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_crewRoomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Crew Room Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_shopName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Shop Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/edit_owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Owner Name"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Crew Room" />
</LinearLayout>
