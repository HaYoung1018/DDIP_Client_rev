<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F0F4FF"
    tools:context=".OwnerCreateCrewRoomActivity">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/create_crew_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크루룸 생성"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3B5998"
        android:layout_marginBottom="24dp"
        android:gravity="center" />
    <!-- 크루룸 생성 이미지 (crewing.png) -->
    <ImageView
        android:id="@+id/crewing_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/crewing"
        android:layout_marginBottom="24dp"
        android:contentDescription="크루룸 생성 이미지" />

    <!-- 크루룸명 입력란 -->
    <EditText
        android:id="@+id/crew_room_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="크루룸명 입력"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />


    <!-- 업장명 입력란 -->
    <EditText
        android:id="@+id/store_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="업장명 입력"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />

    <!-- 크루룸장(점주명) 자동 불러오기 -->
    <EditText
        android:id="@+id/crew_room_leader_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="크루룸장 (점주명)"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"
        android:enabled="false"
        tools:text="" /> <!--여기에서 db에서 불러오면됨-->

    <!-- 생성 버튼 -->
    <Button
        android:id="@+id/create_crew_room_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생성"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#448AFF"
        android:textColor="@android:color/white"
        android:gravity="center" />

</LinearLayout>
