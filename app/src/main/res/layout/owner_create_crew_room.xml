<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F0F4FF"
    tools:context=".OwnerCreateCrewRoomActivity">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/create_crew_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크루룸 생성"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3B5998"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- 크루룸 설명 -->
    <TextView
        android:id="@+id/crew_room_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="크루룸은 점주와 알바생들이 소통하고 일정을 관리하기 위한 공간입니다.\n\n'크루룸명'은 본인이 생성할 방의 이름을 설정하는 것이며, \n'업장명'은 해당 지점의 정확한 정보를 알 수 있도록 도와줍니다."
        android:textSize="12sp"
        android:textColor="#8BA3C5"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- 크루룸 생성 이미지 (crewing.png) -->
    <ImageView
        android:id="@+id/crewing_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/crewing"
        android:layout_marginBottom="24dp"
        android:contentDescription="크루룸 생성 이미지" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text=" 크루룸명(업장명):" />

    <!-- 크루룸명 입력란 -->
    <EditText
        android:id="@+id/crew_room_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="크루룸명 입력   ex) 어디야커피 교통대점"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text=" 세부정보:" />

    <!-- 업장명 입력란 -->
    <EditText
        android:id="@+id/store_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="세부정보 입력    ex)교통빌딩 1층"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text=" 점주명:" />

    <!-- 크루룸장(점주명) 자동 불러오기 -->
    <EditText
        android:id="@+id/crew_room_leader_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="크루룸장 (점주명)"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"
        android:enabled="false" />

    <!-- 생성 버튼 -->
    <Button
        android:id="@+id/create_crew_room_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="크루룸 생성"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#448AFF"
        android:textColor="@android:color/white"
        android:gravity="center" />

</LinearLayout>
