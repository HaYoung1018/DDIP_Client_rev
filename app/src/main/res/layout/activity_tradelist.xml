<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 상단 타이틀 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical|end">

        <!-- Title (쿠잉) -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="쿠잉"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_weight="1"
            android:layout_marginEnd="8dp" />

        <!-- 새로고침 버튼 -->
        <ImageButton
            android:id="@+id/restart_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="새로고침"
            android:src="@drawable/ic_restart"
            android:scaleType="centerInside"
            android:padding="4dp" />

    </LinearLayout>

    <!-- RecyclerView로 교환 리스트 표시 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp" />

    <!-- 교환 요청 생성 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">

        <Button
            android:id="@+id/create_trade_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교환 요청 생성"
            android:backgroundTint="#4F7BBF"
            android:textSize="16sp"
            android:background="@drawable/rounded_button"
            android:padding="12dp" />
    </LinearLayout>

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0E0EA"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="18dp">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="홈"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/sub_crew_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="서브크루룸으로 이동"
            android:src="@drawable/ic_subcrew" />

        <ImageButton
            android:id="@+id/alarm_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="알람"
            android:src="@drawable/ic_alarm" />

        <ImageButton
            android:id="@+id/my_page_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="마이페이지"
            android:src="@drawable/ic_mypage" />
    </LinearLayout>
</LinearLayout>
