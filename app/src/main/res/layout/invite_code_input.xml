<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F0F4FF"
    tools:context=".InviteCodeActivity">

    <!-- 상단 타이틀 -->
    <TextView
        android:id="@+id/invite_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사장님에게 받은 초대 코드가 있나요?"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3B5998"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <!-- 안내 문구 -->
    <TextView
        android:id="@+id/invite_code_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초대 코드 입력 즉시 크루룸에 초대해드립니다.\n기분 좋게 출발해볼까요?"
        android:textSize="16sp"
        android:textColor="#3B5998"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

    <!-- 이미지 -->
    <ImageView
        android:id="@+id/coin_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_coin"
        android:layout_marginBottom="24dp" />

    <!-- 초대 코드 입력란 -->
    <EditText
        android:id="@+id/invite_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="초대 코드 입력"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        android:backgroundTint="#448AFF"
        android:textColor="@android:color/white"
        android:gravity="center" />

    <!-- 안내 문구 하단 -->
    <TextView
        android:id="@+id/invite_code_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초대 코드는 사장님이 보낸 후, \n24시간 이내만 입력할 수 있습니다."
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginTop="24dp"
        android:gravity="center" />

</LinearLayout>
